<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LabelTextHome">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:weightSum">1.2</item>
    </style>

    <style name="LoginSeparator">
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/main_gray</item>
    </style>

    <style name="HomeSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/main_gray_light</item>
        <item name="android:layout_marginBottom">@dimen/element_padding_big</item>
        <item name="android:layout_marginTop">@dimen/element_padding_big</item>
    </style>
    
    <style name="DetailSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/main_gray_light</item>
        <item name="android:layout_marginBottom">@dimen/element_padding_tiny</item>
        <item name="android:layout_marginTop">@dimen/element_padding_tiny</item>
    </style>

    <style name="LoginButtonWrapper" parent="LoginButtonStyle">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FillWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginEditText" parent="FillWrap">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/main_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LoginButton" parent="FillWrap">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">@dimen/element_padding_small</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BlueButton" parent="FillWrap">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">@dimen/element_padding_small</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RegisterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="RegisterForm">
        <item name="android:textColor">@color/dark_heavy</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegisterFormLeft" parent="RegisterForm">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">@dimen/element_padding_small</item>
        <item name="android:layout_weight">.4</item>
    </style>

    <style name="RegisterFormRight" parent="RegisterForm">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_marginRight">@dimen/element_padding_small</item>
        <item name="android:textColor">@color/dark_heavy</item>
    </style>

    <style name="OrderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/facebook_login</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="InboxListItemRootLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="InboxListItemBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_heigt</item>
        <item name="android:background">@color/main_green</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/element_padding_small</item>
    </style>

    <style name="BuyButtonTextiew">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AlertDialog">
        <item name="android:windowBackground">@color/blue_custoom</item>
        <item name="android:colorBackground">@color/blue_custoom</item>
    </style>

    <style name="BuyButtonStyle" parent="BuyButtonTextiew">
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:padding">@dimen/element_padding_small</item>
    </style>

    <style name="GreenButton" parent="BuyButtonTextiew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:padding">@dimen/element_padding_small</item>
    </style>

    <style name="APBDDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/element_padding_tiny</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="APBDDetailLayoutParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="APBDDetailLeftLayout" parent="APBDDetailLayoutParent">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="APBDDetailLeftImageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:paddingTop">@dimen/element_padding_tiny</item>
    </style>

    <style name="APBDDetailRightLayout" parent="APBDDetailLayoutParent">
        <item name="android:layout_weight">9</item>
    </style>

    <style name="APBDDetailRightTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/main_gray</item>
    </style>

</resources>